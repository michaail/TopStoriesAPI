{
  "AllowedHosts": "*",

  "NLog": {
    
    "targets": {
      "allfile": {
        "type": "File",
        "fileName": ".\\Logs\\TopStories-all-${shortdate}.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "allfile"
      }
    ]
  }
}
